<div class="show-container">
  <h1><%= @title %></h1>
  <p><%= @content %></p>
  <div class="d-flex align-center justify-between p-show-container-bottom">
    <a href="/memos/<%= @id %>/edit" class="btn btn-edit hover-opacity">変更</a>
    <form method="post" action="/memos/<%= @id %>">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" class="btn btn-delete hover-opacity" value="削除">
    </form>
  </div>
</div>