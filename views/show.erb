<div class="show-container">
  <h1><%= h(@memo['title']) %></h1>
  <div>
    <p><%= @memo['created_at'] %></p>
    <p><%= h(@memo['content']).gsub(/\n/, '<br>') %></p>
  </div>
  <div class="d-flex align-center justify-between p-show-container-bottom">
    <a href="/memos/<%= @memo['id'] %>/edit" class="btn btn-edit hover-opacity">変更</a>
    <form method="post" action="/memos/<%= @memo['id'] %>">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" class="btn btn-delete hover-opacity" value="削除">
    </form>
  </div>
</div>
